.rank-container {
  padding: 0;
  align-items: stretch;
}

/* Tab Bar */
.tab-bar {
  display: flex;
  background: var(--color-card-solid);
  box-shadow: var(--shadow-sm);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-md) 0;
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background: var(--gradient-primary);
  border-radius: 3rpx;
}

/* Tab Content */
.tab-content {
  flex: 1;
  padding: var(--spacing-md);
  overflow-y: auto;
}

.friends-tab {
  padding: 0;
  height: calc(100vh - 90rpx);
}

.friend-rank-canvas-wrap {
  width: 100%;
  height: 100%;
}

.friend-rank-canvas {
  width: 100%;
  height: 100%;
}

/* Loading */
.loading-wrap {
  display: flex;
  justify-content: center;
  padding: var(--spacing-xl) 0;
}

.loading-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* Rank List */
.rank-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.rank-item {
  display: flex;
  align-items: center;
  background: var(--color-card);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md) var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.rank-item.is-me {
  background: rgba(108, 92, 231, 0.08);
  border: 2rpx solid rgba(108, 92, 231, 0.25);
}

/* Rank Number */
.rank-number {
  width: 60rpx;
  text-align: center;
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--color-text-secondary);
  flex-shrink: 0;
}

.rank-number.top-1 {
  font-size: var(--font-size-lg);
  filter: drop-shadow(0 2rpx 6rpx rgba(253, 203, 110, 0.6));
}

.rank-number.top-2 {
  font-size: var(--font-size-lg);
  filter: drop-shadow(0 2rpx 6rpx rgba(180, 180, 190, 0.6));
}

.rank-number.top-3 {
  font-size: var(--font-size-lg);
  filter: drop-shadow(0 2rpx 6rpx rgba(205, 127, 50, 0.6));
}

/* Avatar */
.rank-avatar {
  margin: 0 var(--spacing-md);
  flex-shrink: 0;
}

.avatar-img {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-round);
}

.avatar-placeholder {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-round);
  background: #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.avatar-placeholder.me {
  background: var(--gradient-primary);
  color: #FFFFFF;
}

/* Rank Info */
.rank-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.rank-name {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--color-text);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-detail {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

/* Score */
.rank-score {
  font-size: var(--font-size-lg);
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  flex-shrink: 0;
  margin-left: var(--spacing-md);
}

/* My Rank Card */
.my-rank-card {
  margin-top: var(--spacing-md);
}

.rank-divider {
  text-align: center;
  padding: var(--spacing-sm) 0;
}

.divider-text {
  color: var(--color-text-secondary);
  font-size: var(--font-size-md);
  letter-spacing: 8rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.empty-hint {
  font-size: var(--font-size-sm);
  color: #BBB;
}
